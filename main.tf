terraform {
  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "3.105.0"
    }
  }

  backend "azurerm" {
    storage_account_name = "whatislavxtfstate"
    container_name       = "tfstate"
    resource_group_name  = "tfstate"
    key                  = "terraform.tfstate"
